@page "/edit-principalpassword"
@page "/edit-principalpassword/{id:long}"
@inject HttpClient Http
@inject IHttpClientFactory ClientFactory
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@if(id == null)
{
	<h3>Create Password</h3>
}
else
{
	<h3>Edit Password @principalpassword.getRwkString() </h3>
}

<EditForm Model="principalpassword" onsubmit="HandleSubmit">
	@{
		Console.WriteLine("rendering");
	}
	<div>
        <table>

                <tr>
                <td><label for="id">Principal ID</label></td>
		        <td><InputNumber id="id" @bind-Value="principalpassword.id" class="form-control" /></td>
                </tr>
                
                <tr>
                <td><label for="principal_id">Principal ID</label></td>
		        <td><InputNumber id="principal_id" @bind-Value="principalpassword.principal_id" class="form-control" /></td>
                </tr>
                
                <tr>
                <td><label for="password_hash">Password</label></td>
		        <td><InputText id="password_hash" @bind-Value="principalpassword.password_hash" class="form-control" /></td>
                </tr>
                
                <tr>
                <td><label for="expiry">Expiry</label></td>
		        <td><InputDate id="expiry" @bind-Value="principalpassword.expiry" class="form-control" /></td>
                </tr>
                
                <tr>
                <td><label for="needs_reset">Needs Reset</label></td>
		        <td><InputNumber id="needs_reset" @bind-Value="principalpassword.needs_reset" class="form-control" /></td>
                </tr>
                		

				<tr>
					<td>Active</td><td>@(principalpassword.is_active.ToString())</td>
				</tr>
				
				<tr>
					<td>Created By</td><td>@(principalpassword.created_by.ToString())</td>
				</tr>
				
				<tr>
					<td>Last Updated</td><td>@(principalpassword.last_updated.ToString())</td>
				</tr>
				
				<tr>
					<td>Last Updated By</td><td>@(principalpassword.last_updated_by.ToString())</td>
				</tr>
				
				<tr>
					<td>Version</td><td>@(principalpassword.version.ToString())</td>
				</tr>
							
		</table>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</EditForm>

@code {
	[Parameter]
	public long? id {get;set;}

	public PrincipalPassword principalpassword {get;set;} = new PrincipalPassword();

	protected override async Task OnParametersSetAsync()
	{
		Console.WriteLine("getting data");
		if (id is not null) {
			var remoteClient = ClientFactory.CreateClient("RemoteAPI");
		var result = await remoteClient.GetFromJsonAsync<PrincipalPassword>($"api/principalpassword/{id}");
		if (result is not null)
			principalpassword = result;
		}
	
	}

	async Task  HandleSubmit()
	{
		var remoteClient = ClientFactory.CreateClient("RemoteAPI");

		if (id is not null) {
			
			var result = await remoteClient.PutAsJsonAsync<PrincipalPassword>($"api/principalpassword/{id}", principalpassword);
				if (result is not null)
				{
					var readResult = await result.Content.ReadFromJsonAsync<PrincipalPassword>();
					if (readResult is not null) 
					{
						principalpassword = readResult;
					}
				}
		}
		else
		{
			var result = await remoteClient.PostAsJsonAsync<PrincipalPassword>($"api/principalpassword", principalpassword);	
			if (result is not null)
				{
					var readResult = await result.Content.ReadFromJsonAsync<PrincipalPassword>();
					if (readResult is not null)
					{
						principalpassword = readResult;
					}
				}
		}

	}
}   
