@page "/edit-principalorg"
@page "/edit-principalorg/{id:long}"
@inject HttpClient Http
@inject IHttpClientFactory ClientFactory
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@if(id == null)
{
	<h3>Create Principals</h3>
}
else
{
	<h3>Edit Principals @principalorg.getRwkString() </h3>
}

<EditForm Model="principalorg" onsubmit="HandleSubmit">
	@{
		Console.WriteLine("rendering");
	}
	<div>
        <table>

                <tr>
                <td><label for="id">Principal Org ID</label></td>
		        <td><InputNumber id="id" @bind-Value="principalorg.id" class="form-control" /></td>
                </tr>
                
                <tr>
                <td><label for="org_id">Organization ID</label></td>
		        <td><InputNumber id="org_id" @bind-Value="principalorg.org_id" class="form-control" /></td>
                </tr>
                
                <tr>
                <td><label for="principal_id">Principal ID</label></td>
		        <td><InputNumber id="principal_id" @bind-Value="principalorg.principal_id" class="form-control" /></td>
                </tr>
                		

				<tr>
					<td>Active</td><td>@(principalorg.is_active.ToString())</td>
				</tr>
				
				<tr>
					<td>Created By</td><td>@(principalorg.created_by.ToString())</td>
				</tr>
				
				<tr>
					<td>Last Updated</td><td>@(principalorg.last_updated.ToString())</td>
				</tr>
				
				<tr>
					<td>Last Updated By</td><td>@(principalorg.last_updated_by.ToString())</td>
				</tr>
				
				<tr>
					<td>Version</td><td>@(principalorg.version.ToString())</td>
				</tr>
							
		</table>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</EditForm>

@code {
	[Parameter]
	public long? id {get;set;}

	public PrincipalOrg principalorg {get;set;} = new PrincipalOrg();

	protected override async Task OnParametersSetAsync()
	{
		Console.WriteLine("getting data");
		if (id is not null) {
			var remoteClient = ClientFactory.CreateClient("RemoteAPI");
		var result = await remoteClient.GetFromJsonAsync<PrincipalOrg>($"api/principalorg/{id}");
		if (result is not null)
			principalorg = result;
		}
	
	}

	async Task  HandleSubmit()
	{
		var remoteClient = ClientFactory.CreateClient("RemoteAPI");

		if (id is not null) {
			
			var result = await remoteClient.PutAsJsonAsync<PrincipalOrg>($"api/principalorg/{id}", principalorg);
				if (result is not null)
				{
					var readResult = await result.Content.ReadFromJsonAsync<PrincipalOrg>();
					if (readResult is not null) 
					{
						principalorg = readResult;
					}
				}
		}
		else
		{
			var result = await remoteClient.PostAsJsonAsync<PrincipalOrg>($"api/principalorg", principalorg);	
			if (result is not null)
				{
					var readResult = await result.Content.ReadFromJsonAsync<PrincipalOrg>();
					if (readResult is not null)
					{
						principalorg = readResult;
					}
				}
		}

	}
}   
