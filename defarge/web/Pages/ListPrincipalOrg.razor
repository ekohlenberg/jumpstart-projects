@page "/principalorg"
@using System.Net.Http;
@using Microsoft.Extensions.DependencyInjection;
@inject HttpClient Http
@inject IHttpClientFactory ClientFactory
@inject NavigationManager Navigation
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
<PageTitle>Principals</PageTitle>

<h1>Principals</h1>

<p>This component demonstrates fetching Principals data from the server.</p>

@if (principalorgList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>

                <th>Principal Org ID</th>
                
                <th>Organization ID</th>
                
                <th>Principal ID</th>
                
                <th>Active</th>
                
                <th>Created By</th>
                
                <th>Last Updated</th>
                
                <th>Last Updated By</th>
                
                <th>Version</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var principalorg in principalorgList)
            {
                <tr>

                    <td>@principalorg.id.ToString()</td>
                    
                    <td>@principalorg.org_id.ToString()</td>
                    
                    <td>@principalorg.principal_id.ToString()</td>
                    
                    <td>@principalorg.is_active.ToString()</td>
                    
                    <td>@principalorg.created_by.ToString()</td>
                    
                    <td>@principalorg.last_updated.ToString()</td>
                    
                    <td>@principalorg.last_updated_by.ToString()</td>
                    
                    <td>@principalorg.version.ToString()</td>
                                        <td><button class="btn btn-primary" @onclick="@(()=> EditPrincipalOrg(@principalorg.id))">Edit</button></td>
                </tr>
            }
        </tbody>
    </table>
    <td><button class="btn btn-primary" @onclick="@(()=> AddPrincipalOrg())">Add</button></td>
}

@code {
    protected  PrincipalOrg[]? principalorgList;

    protected override async Task OnInitializedAsync()
    {
        var remoteClient = ClientFactory.CreateClient("RemoteAPI");

        principalorgList = await remoteClient.GetFromJsonAsync<PrincipalOrg[]>("api/principalorg");
    }

    void AddPrincipalOrg()
    {
        
        Navigation.NavigateTo("edit-principalorg");
    }

    void EditPrincipalOrg(long id)
    {
        Navigation.NavigateTo($"edit-principalorg/{id}");
    }


   
}
